<Page
    x:Class="Param_ItemNamespace.Views.SchemeActivationSamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    DataContext="{Binding SchemeActivationSampleViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="ActivationParameterDateTemplate">
            <TextBlock
                Text="{Binding}"
                Style="{StaticResource BodyTextStyle}"
                Margin="{StaticResource SmallAllMargin}" />
        </DataTemplate>
    </Page.Resources>
    <Grid
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            x:Uid="SchemeActivationSamplePage_Title"
            Style="{StaticResource PageTitleStyle}" />
        <ScrollViewer Grid.Row="1">
            <ItemsControl
                ItemsSource="{x:Bind ViewModel.Parameters}"
                ItemTemplate="{StaticResource ActivationParameterDateTemplate}" />
        </ScrollViewer>
    </Grid>
</Page>
