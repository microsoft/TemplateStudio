                    <ts:NotificationTemplateSelector>
                        <ts:NotificationTemplateSelector.Information>
                            <DataTemplate>
                                <Grid Style="{StaticResource TSGridNotification}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
